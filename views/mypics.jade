doctype html
extends ./index.jade
block append content
    div.container
        div.grid
            -if(pics_url.length > 0)
            -for(var i = 0; i < pics_url.length; i++)
                div.grid-item
                    div.main-img
                        img(src=pics_url[i])
                        div.description #{descriptions[i]}
                    div.info
                        a(href="#")
                            img(src=profiles[i] title=users[i])
                        a(href="/delete/"+ids[i])
                            button.btn.btn-default X
                        div(data-id=ids[i]).like.btn.btn-default.btn-sm
                            span.likes-num #{likes[i]}
                            span.glyphicon.glyphicon.glyphicon-star

    script(src='/js/mansory.js')
    script(src='/js/likes.js')

    include ./footer.jade


